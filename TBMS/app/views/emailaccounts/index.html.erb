<h1>Listing Accounts</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Preferences</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emailaccounts.each do |emailaccount| %>
  <tr>
    <td><%= emailaccount.email %></td>
    <td><%= emailaccount.name %></td>
    <td><%= emailaccount.preferences %></td>
    <td><%= link_to 'Show', emailaccount %></td>
    <td><%= link_to 'Edit', edit_emailaccount_path(emailaccount) %></td>
    <td><%= link_to 'Destroy', emailaccount, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><a href= <%= emailaccount.zipPath %>>Get the zip file</a> </td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Account', new_emailaccount_path %>

