<% form_tag(:action => "setHtml") do %>
	<h2>Configure HTML Settings</h2>
	<br />
	<table>
		<tr>
			<td>Set HTML</td><td></td>
		</tr>
		<tr>
			<td><%= label_tag("ON") %></td><td><%= radio_button_tag("set", true, checked = true) %></td>
		</tr>
		<tr>
			<td><%= label_tag("OFF") %></td><td><%= radio_button_tag("set", false, checked = false) %></td>
		</tr>
		<tr>
			<td><%= submit_tag("Save") %></td><td></td>
		</tr>
	</table>
<% end %>

